<web-app >
  <welcome-file-list>
    <welcome-file>input.html</welcome-file>
  </welcome-file-list>
  
    <context-param>
       <param-name>driver</param-name>
       <param-value>oracle.jdbc.driver.OracleDriver</param-value>
     </context-param>
     <context-param>
       <param-name>url</param-name>
       <param-value>jdbc:oracle:oci8:@xe</param-value>
     </context-param>
     <context-param>
       <param-name>dbuser</param-name>
       <param-value>system3</param-value>
     </context-param>
     <context-param>
       <param-name>dbuser</param-name>
       <param-value>system4</param-value>
     </context-param>
     <context-param>
       <param-name>dbpwd</param-name>
       <param-value>manager</param-value>
     </context-param>
  <servlet>
    <servlet-name>db</servlet-name>
    <servlet-class>com.nt.servlet.DBServlet</servlet-class>
    </servlet>
  <servlet-mapping>
     <servlet-name>db</servlet-name>
     <url-pattern>/dburl</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>test</servlet-name>
    <servlet-class>com.nt.servlet.TestServlet</servlet-class>
     <init-param>
       <param-name>dbuser</param-name>
       <param-value>system2</param-value>
     </init-param>
     <init-param>
       <param-name>dbuser</param-name>
       <param-value>system1</param-value>
     </init-param>
     
   </servlet>
   <servlet-mapping>
       <servlet-name>test</servlet-name>
       <url-pattern>/testurl</url-pattern>
   </servlet-mapping>
</web-app>